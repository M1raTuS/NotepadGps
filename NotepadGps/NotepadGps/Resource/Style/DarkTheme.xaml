<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"    
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    
                    x:Class="NotepadGps.Resource.Style.DarkTheme">

    <Color x:Key="BackgroundColor">#1E242B</Color>
    <Color x:Key="PlaceholderColor">#858E9E</Color>
    <Color x:Key="EntryTextColor">#FEFEFD</Color>
    <Color x:Key="LabelTextColor">#FEFEFD</Color>
    <Color x:Key="WhiteDarkColor">#1E242B</Color>
    <Color x:Key="BorderColor">#FEFEFD</Color>
    <Color x:Key="ButtonColor">#7485FB</Color>
    <Color x:Key="MapButtonColor">#1E242B</Color>
    <Color x:Key="ImgBackgroundColor">#33374E</Color>
    <Color x:Key="CoordBackgroundColor">#D7DDE8</Color>


    <Color x:Key="FrameColor">#FF1f1f1f</Color>
    <Color x:Key="TextPrimaryColor">#B0FFFFFF</Color>
    <Color x:Key="TextSecondaryColor">#eFeFeF</Color>
    <Color x:Key="FloatButtonColor">#FFFFFFFF</Color>
    <Color x:Key="NavigationBarColor">White</Color>
    <Color x:Key="SecondaryColor">Red</Color>

    <Style x:Key="Title" TargetType="Label">
        
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="Large"/>
        
    </Style>
    
</ResourceDictionary> 