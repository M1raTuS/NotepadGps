<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"    
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"    
                    x:Class="NotepadGps.Resource.Style.LightTheme">

    <Color x:Key="BackgroundColor">#FEFEFD</Color>
    <Color x:Key="PlaceholderColor">#858E9E</Color>
    <Color x:Key="EntryTextColor">#1E242B</Color>
    <Color x:Key="LabelTextColor">#3D4E61</Color>
    <Color x:Key="WhiteDarkColor">#FEFEFD</Color>
    <Color x:Key="BorderColor">#858E9E</Color>
    <Color x:Key="ButtonColor">#596EFB</Color>
    <Color x:Key="MapButtonColor">#FEFEFD</Color>


    <Color x:Key="FrameColor">#FFe0e0e0</Color>
    <Color x:Key="TextPrimaryColor">#B0000000</Color>
    <Color x:Key="TextSecondaryColor">#858585</Color>
    <Color x:Key="FloatButtonColor">#000000</Color>
    <Color x:Key="NavigationBarColor">White</Color>
    <Color x:Key="SecondaryColor">Red</Color>
   
    <Style x:Key="Title" TargetType="Label">
        
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="FontSize" Value="Large"/>
        
    </Style>
    
</ResourceDictionary>    